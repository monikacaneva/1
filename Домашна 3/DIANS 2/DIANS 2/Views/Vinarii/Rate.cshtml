@model DIANS_2.Models.Winery

@{
    ViewBag.Title = "Rate Winery";
}
<link href='https://fonts.googleapis.com/css?family=Tenor Sans' rel='stylesheet'>
<style>
    body {
        background-color: #EDDFB6;
        font-family: 'Tenor Sans';
    }
</style>

<h2>Rate Winery</h2>

<p>Rate the winery with the name: <strong>@Model.Name</strong></p>
<p>Current Rating: <strong>@Model.Rating</strong></p>

@using (Html.BeginForm("Rate", "Vinarii", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Rating, "New Rating:")
        @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
    </div>

    <input type="hidden" name="Name" value="@Model.Name" />

    <button type="submit" class="btn btn-primary">Submit Rating</button>
}

<a href="@Url.Action("Contact", "Vinarii")">Back to Contact</a>

