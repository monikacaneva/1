@model List<DIANS_2.Models.Winery>

@{
    ViewBag.Title = "За нас";
}

<main aria-labelledby="title">
    <h2>Winery List</h2>

    <table>
        <tr>
            <th>Winery Name</th>
            <th>Winery City</th>
            <th>Winery Address</th>
            <th>Raiting</th>
        </tr>
        @if (Model != null)
        {
            foreach (var winery in Model)
            {
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().City)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Rating)</th>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No wineries available</td>
            </tr>
        }
    </table>
</main>
